<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:background="@color/bglightgray"
    android:fadingEdge="none">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- 入托咨询 一个主界面 -->


        <!-- 简介 -->

        <LinearLayout
            android:id="@+id/consultation_layout_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingTop="2dp" >
            <TextView
                android:id="@+id/consultation_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/consultation_consignation" 
                android:textColor="@color/light_gray2"
                android:textSize="16dp"/>
        </LinearLayout>

        <!-- 姓名、电话、邮箱、标题、内容 -->

        <LinearLayout
            android:id="@+id/consultation_layout_middle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:orientation="vertical"
            android:layout_marginRight="10dp" >

            <!-- 姓名 -->

            <RelativeLayout
                android:id="@+id/consultation_name_layout"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_bg">

                <TextView
                    android:id="@+id/consultation_name"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/consultation_name"
                    android:textColor="@color/light_gray2" 
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:textSize="16dp"/>

                <EditText
                    android:id="@+id/consultation_name_editor"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/consultation_star"
                    android:layout_toRightOf="@+id/consultation_name"
                    android:inputType="textPersonName"
                    android:singleLine="true" 
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:textColorHint="@color/light_white"
                    android:hint="@string/consultation_name_input"/>

                <ImageView
                    android:id="@+id/consultation_star"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/consultation_07" />
            </RelativeLayout>

            <TextView
                android:id="@+id/consultation_name_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/drakred"
                android:textSize="12dp" />
            <!-- 电话 -->

            <RelativeLayout
                android:id="@+id/consultation_phone_layout"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_bg" >

                <TextView
                    android:id="@+id/consultation_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/consultation_phone"
                    android:textColor="@color/light_gray2" 
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:textSize="16dp"/>

                <EditText
                    android:id="@+id/consultation_phone_editor"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/consultation_phone_star"
                    android:layout_toRightOf="@+id/consultation_phone"
                    android:inputType="phone"
                    android:singleLine="true" 
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:textColorHint="@color/light_white"
                    android:hint="@string/consultation_tel_input"/>

                <ImageView
                    android:id="@+id/consultation_phone_star"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/consultation_07" />
            </RelativeLayout>

            <TextView
                android:id="@+id/consultation_phone_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/drakred"
                android:textSize="12dp" />
            <!-- 邮箱 -->

            <RelativeLayout
                android:id="@+id/consultation_email_layout"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_bg" >

                <TextView
                    android:id="@+id/consultation_email"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/consultation_email"
                    android:textColor="@color/light_gray2" 
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:textSize="16dp"/>

                <EditText
                    android:id="@+id/consultation_email_Editor"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/consultation_email_star"
                    android:layout_toRightOf="@+id/consultation_email"
                    android:inputType="textPersonName"
                    android:singleLine="true" 
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:textColorHint="@color/light_white"
                    android:hint="@string/consultation_mail_input"/>

                <ImageView
                    android:id="@+id/consultation_email_star"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/consultation_07"
                    android:visibility="invisible" />
            </RelativeLayout>

            <TextView
                android:id="@+id/consultation_email_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/drakred"
                android:textSize="12dp" />
            <!-- 標題 -->

            <RelativeLayout
                android:id="@+id/consultation_title_layout"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_bg" >

                <TextView
                    android:id="@+id/consultation_title"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/consultation_title"
                    android:textColor="@color/light_gray2"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:textSize="16dp"/>

                <EditText
                    android:id="@+id/consultation_title_Editor"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/consultation_title_star"
                    android:layout_toRightOf="@+id/consultation_title"
                    android:inputType="textPersonName"
                    android:singleLine="true" 
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:textColorHint="@color/light_white"
                    android:hint="@string/consultatio_title_input"/>

                <ImageView
                    android:id="@+id/consultation_title_star"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/consultation_07"
                    android:visibility="invisible" />
            </RelativeLayout>

            <TextView
                android:id="@+id/consultation_title_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/drakred"
                android:textSize="12dp" 
                android:visibility="gone"/>
            <!-- 内容 -->
            <LinearLayout
                android:id="@+id/consultation_content_hint"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/consultation_content_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:text="@string/consultation_content"
                    android:textColor="@color/light_gray2"
                    android:layout_marginLeft="5dp"
                    android:textSize="16dp"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:singleLine="true"
                    android:visibility="invisible" 
                    android:textSize="16dp"/>

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/consultation_07" />

                <TextView
                    android:id="@+id/consultation_content_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/drakred"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>
        <EditText
            android:id="@+id/consultation_content_editor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="8"
            android:gravity="top|left"
            android:shadowColor="@color/transparent" 
            android:hint="@string/consultatio_content_input"
            android:background="@drawable/edit_bg"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:textColorHint="@color/light_white"
            android:textSize="16dp"/>
    </LinearLayout>

</ScrollView>