<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip" >

        <WebView
            android:id="@+id/myWebView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="46dp" >

            <SlidingDrawer
                android:id="@+id/drawer"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:clickable="true"
                android:content="@+id/content"
                android:handle="@+id/handle" >

                <!--
                <include
                    android:id="@id/content"
                    layout="@layout/main_more_view" />
                -->

                <ImageView
                    android:id="@id/handle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bglightblue"
                    android:contentDescription="@string/yes"
                    android:fadingEdge="none"
                    android:scaleType="fitXY"
                    android:src="@drawable/sliding_drawer_handle_bottom_down" />

                <LinearLayout
                    android:id="@id/content"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/bglightblue" >

                    <ScrollView
                        android:id="@+id/mScrollView"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:fadingEdge="none"
                        android:scrollbars="none" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TableLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/shape_bg_corners"
                                android:orientation="vertical" >

                                <RelativeLayout
                                    android:id="@+id/setting_accountmanage_RLayout"
                                    android:layout_width="fill_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="1dip"
                                    android:background="@drawable/table_item_selector"
                                    android:orientation="horizontal" >

                                    <ImageView
                                        android:id="@+id/imageView2"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_alignParentLeft="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="5dip"
                                        android:src="@drawable/more2" />

                                    <TextView
                                        android:id="@+id/setting_accountmanage_TextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_toRightOf="@+id/imageView2"
                                        android:text="@string/accountmanage"
                                        android:textColor="#000000"
                                        android:textSize="@dimen/TextDefaultSize" />

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="10dp"
                                        android:src="@drawable/nextpage_1" />

                                    <TextView
                                        android:layout_width="fill_parent"
                                        android:layout_height="1dip"
                                        android:layout_alignParentBottom="true"
                                        android:background="@drawable/line1" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/setting_systemsetting_RLayout"
                                    android:layout_width="fill_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/table_item_selector"
                                    android:orientation="horizontal" >

                                    <ImageView
                                        android:id="@+id/imageView3"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_alignParentLeft="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="5dip"
                                        android:src="@drawable/more3" />

                                    <TextView
                                        android:id="@+id/setting_systemsetting_TextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_toRightOf="@+id/imageView3"
                                        android:text="@string/systemsetting"
                                        android:textColor="#000000"
                                        android:textSize="@dimen/TextDefaultSize" />

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="10dp"
                                        android:src="@drawable/nextpage_1" />
                                </RelativeLayout>
                            </TableLayout>

                            <TableLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/shape_bg_corners"
                                android:orientation="vertical" >

                                <RelativeLayout
                                    android:id="@+id/setting_kindergartens_RLayout"
                                    android:layout_width="fill_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="1dip"
                                    android:background="@drawable/table_item_selector"
                                    android:orientation="horizontal" >

                                    <ImageView
                                        android:id="@+id/imageView10"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_alignParentLeft="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="5dip"
                                        android:contentDescription="@string/kindergartens"
                                        android:src="@drawable/collect_middle" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_toRightOf="@+id/imageView10"
                                        android:text="@string/kindergartens"
                                        android:textColor="#000000"
                                        android:textSize="@dimen/TextDefaultSize" />

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="10dp"
                                        android:src="@drawable/nextpage_1" />
                                </RelativeLayout>

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="1dip"
                                    android:background="@drawable/line1" />

                                <RelativeLayout
                                    android:id="@+id/setting_help_RLayout"
                                    android:layout_width="fill_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/table_item_selector"
                                    android:orientation="horizontal" >

                                    <ImageView
                                        android:id="@+id/imageView4"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_alignParentLeft="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="5dip"
                                        android:src="@drawable/more4" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_toRightOf="@+id/imageView4"
                                        android:text="@string/help"
                                        android:textColor="#000000"
                                        android:textSize="@dimen/TextDefaultSize" />

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="10dp"
                                        android:src="@drawable/nextpage_1" />
                                </RelativeLayout>

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="1dip"
                                    android:background="@drawable/line1" />

                                <RelativeLayout
                                    android:id="@+id/setting_hotline_RLayout"
                                    android:layout_width="fill_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/table_item_selector"
                                    android:orientation="horizontal" >

                                    <ImageView
                                        android:id="@+id/imageView8"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_alignParentLeft="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="5dip"
                                        android:src="@drawable/more8" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_toRightOf="@+id/imageView8"
                                        android:text="@string/hotline"
                                        android:textColor="#000000"
                                        android:textSize="@dimen/TextDefaultSize" />

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="10dp"
                                        android:src="@drawable/nextpage_1" />
                                </RelativeLayout>

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="1dip"
                                    android:background="@drawable/line1" />

                                <RelativeLayout
                                    android:id="@+id/setting_advicefeedback_RLayout"
                                    android:layout_width="fill_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/table_item_selector"
                                    android:orientation="horizontal" >

                                    <ImageView
                                        android:id="@+id/imageView5"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_alignParentLeft="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="5dip"
                                        android:src="@drawable/more5" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_toRightOf="@+id/imageView5"
                                        android:text="@string/advice_feedback"
                                        android:textColor="#000000"
                                        android:textSize="@dimen/TextDefaultSize" />

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="10dp"
                                        android:src="@drawable/nextpage_1" />
                                </RelativeLayout>

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="1dip"
                                    android:background="@drawable/line1" />

                                <RelativeLayout
                                    android:id="@+id/setting_share_RLayout"
                                    android:layout_width="fill_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/table_item_selector"
                                    android:orientation="horizontal" >

                                    <ImageView
                                        android:id="@+id/imageView7"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_alignParentLeft="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="5dip"
                                        android:src="@drawable/more7" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_toRightOf="@+id/imageView7"
                                        android:text="@string/tellfriend"
                                        android:textColor="#000000"
                                        android:textSize="@dimen/TextDefaultSize" />

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="10dp"
                                        android:src="@drawable/nextpage_1" />
                                </RelativeLayout>

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="1dip"
                                    android:background="@drawable/line1" />

                                <RelativeLayout
                                    android:id="@+id/setting_about_RLayout"
                                    android:layout_width="fill_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/table_item_selector"
                                    android:orientation="horizontal" >

                                    <ImageView
                                        android:id="@+id/imageView9"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_alignParentLeft="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="5dip"
                                        android:src="@drawable/more9" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_toRightOf="@+id/imageView9"
                                        android:text="@string/about"
                                        android:textColor="#000000"
                                        android:textSize="@dimen/TextDefaultSize" />

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="10dp"
                                        android:src="@drawable/nextpage_1" />
                                </RelativeLayout>
                            </TableLayout>

                            <Button
                                android:id="@+id/button_logout"
                                android:layout_width="fill_parent"
                                android:layout_height="40dp"
                                android:layout_marginBottom="20dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/btn_logout_selector"
                                android:text="@string/logout"
                                style="@style/BtnText"
                                android:visibility="gone" />
                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>
            </SlidingDrawer>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>