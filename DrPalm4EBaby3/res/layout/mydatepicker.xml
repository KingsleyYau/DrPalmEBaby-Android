<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">
    	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        	android:id="@+id/date_layout"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:paddingLeft="5dp"
			android:paddingTop="12dp">
	        <com.drcom.drpalm.View.controls.wheel.WheelView android:id="@+id/year"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"/>
			<com.drcom.drpalm.View.controls.wheel.WheelView android:id="@+id/month"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"/>
			<com.drcom.drpalm.View.controls.wheel.WheelView android:id="@+id/day"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"/>
		</LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/time_layout"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:paddingRight="5dp"
			android:paddingTop="12dp">
	        <com.drcom.drpalm.View.controls.wheel.WheelView android:id="@+id/hours"
				android:layout_height="wrap_content"
				android:layout_width="60dp"/>
			<com.drcom.drpalm.View.controls.wheel.WheelView android:id="@+id/mins"
				android:layout_height="wrap_content"
				android:layout_width="60dp"/>
		</LinearLayout>

</LinearLayout>