<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fadingEdge="none"
    android:scrollbars="none" >
	<LinearLayout 
	    android:id="@+id/relativelayout_accountmanage"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:orientation="vertical"
    	android:background="@color/bglightgray">
		    <TableLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:layout_marginLeft="20dip"
		        android:layout_marginRight="20dip"
		        android:background="@drawable/shape_bg_corners"
		        android:orientation="vertical" >
		
		        <RelativeLayout
		            android:id="@+id/RLayout_accountpic"
		            android:layout_width="fill_parent"
		            android:layout_height="50dip"
		            android:background="@drawable/table_item_selector"
		            android:orientation="horizontal" >
		
		            <TextView
		                android:id="@+id/textviewaccountname"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentLeft="true"
		                android:layout_centerVertical="true"
		                android:layout_marginLeft="5dip"
		                android:textColor="#000000"
		                android:textSize="@dimen/TextDefaultSize" />
		            
		            <ImageView android:id="@+id/imgviewaccountpic"
		                android:layout_width="40dp"
		                android:layout_height="40dp"
		                android:layout_alignParentRight="true"
		                android:layout_centerVertical="true"
		                android:layout_marginRight="6dp"
		                android:background="@drawable/white_kk"
		                android:src="@drawable/login_default_user"/>
		        </RelativeLayout>
		
		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="1dip"
		            android:background="#CCCCCC" />
		
		        <RelativeLayout
		            android:layout_width="fill_parent"
		            android:layout_height="50dip"
		            android:layout_marginTop="1dip"
		            android:orientation="horizontal" >
		
		            <TextView
		                android:id="@+id/textviewusrname"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentLeft="true"
		                android:layout_centerVertical="true"
		                android:layout_marginLeft="5dip"
		                android:text="@string/loginaccount"
		                android:textColor="#000000"
		                android:textSize="@dimen/TextDefaultSize" />
		
		            <TextView
		                android:id="@+id/loginusername"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentRight="true"
		                android:layout_centerVertical="true"
		                android:layout_marginRight="6dp"
		                android:text=""
		                android:textColor="#000000"
		                android:textSize="@dimen/TextDefaultSize" />
		        </RelativeLayout>
		
		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="1dip"
		            android:background="#CCCCCC" />
		
		        <RelativeLayout
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="1dip"
		            android:orientation="horizontal" >
		
		            <!-- 
		            <CheckBox
		                android:id="@+id/checkboxrememberpwd"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentRight="true"
		                android:layout_alignParentTop="true" />
		                 -->
		            <com.drcom.ui.View.controls.SlipBtn.SlipButton
				        android:id="@+id/slipbutton_rememberpwd"
				        android:layout_width="68dip"
				        android:layout_height="40dip"
				        android:layout_alignParentRight="true"
				        android:layout_centerVertical="true" />
		
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentLeft="true"
		                android:layout_centerVertical="true"
		                android:layout_marginLeft="5dip"
		                android:text="@string/rememberpwd"
		                android:textColor="#000000"
		                android:textSize="@dimen/TextDefaultSize" />
		        </RelativeLayout>
		
		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="1dip"
		            android:background="#CCCCCC" />
		
		        <RelativeLayout
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="1dip"
		            android:orientation="horizontal" >
		
		            <!--  
		            <CheckBox
		                android:id="@+id/checkboxautologin"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentRight="true"
		                android:layout_alignParentTop="true" />
		            -->
		
		            <com.drcom.ui.View.controls.SlipBtn.SlipButton
				        android:id="@+id/slipbutton_autologin"
				        android:layout_width="68dip"
				        android:layout_height="40dip"
				        android:layout_alignParentRight="true"
				        android:layout_centerVertical="true" />
		            
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentLeft="true"
		                android:layout_centerVertical="true"
		                android:layout_marginLeft="5dip"
		                android:text="@string/autologin"
		                android:textColor="#000000"
		                android:textSize="@dimen/TextDefaultSize" />
		        </RelativeLayout>
		        <!--
					<LinearLayout 
		                android:layout_height="1dip"
		                android:layout_width="fill_parent"
		                android:background="#CCCCCC"
		                />
		            <RelativeLayout
		                android:id="@+id/rlparentlock"
		                android:layout_width="fill_parent"
		                android:layout_height="50dip"
		                android:layout_marginTop="1dip"
		                android:orientation="horizontal" >
		
		                <ImageView
		                    android:id="@+id/rlparentlocknextpage"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_alignParentRight="true"
		                    android:layout_marginRight="10dip"
		                    android:layout_centerVertical="true"
		                    />
		
		                <TextView
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_alignParentLeft="true"
		                    android:layout_centerVertical="true"
		                    android:layout_marginLeft="5dip"
		                    android:text="@string/parentlock"
		                    android:textSize="@dimen/TextDefaultSize"
		                    android:textColor="#000000" />
		            </RelativeLayout>		
		        -->
		    </TableLayout>
		    
		    <TableLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:layout_marginLeft="20dip"
		        android:layout_marginRight="20dip"
		        android:background="@drawable/shape_bg_corners"
		        android:orientation="vertical" >
		        
		        <RelativeLayout
		            android:layout_width="fill_parent"
		            android:layout_height="50dip"
		            android:layout_marginTop="1dip"
		            android:orientation="horizontal" >
		
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentLeft="true"
		                android:layout_centerVertical="true"
		                android:layout_marginLeft="5dip"
		                android:text="@string/level"
		                android:textColor="#000000"
		                android:textSize="@dimen/TextDefaultSize" />
		
		            <TextView
		                android:id="@+id/textview_usrlevel"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentRight="true"
		                android:layout_centerVertical="true"
		                android:layout_marginRight="6dp"
		                android:text=""
		                android:textColor="#000000"
		                android:textSize="@dimen/TextDefaultSize" />
		        </RelativeLayout>
		        
		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="1dip"
		            android:background="#CCCCCC" />
		        
		        <RelativeLayout
		            android:layout_width="fill_parent"
		            android:layout_height="50dip"
		            android:layout_marginTop="1dip"
		            android:orientation="horizontal" >
		
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentLeft="true"
		                android:layout_centerVertical="true"
		                android:layout_marginLeft="5dip"
		                android:text="@string/curscore"
		                android:textColor="#000000"
		                android:textSize="@dimen/TextDefaultSize" />
		
		            <TextView
		                android:id="@+id/textview_usercurscore"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentRight="true"
		                android:layout_centerVertical="true"
		                android:layout_marginRight="6dp"
		                android:text=""
		                android:textColor="#000000"
		                android:textSize="@dimen/TextDefaultSize" />
		        </RelativeLayout>
		        
		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="1dip"
		            android:background="#CCCCCC" />
		        
		        <RelativeLayout
		            android:layout_width="fill_parent"
		            android:layout_height="50dip"
		            android:layout_marginTop="1dip"
		            android:orientation="horizontal" >
		
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentLeft="true"
		                android:layout_centerVertical="true"
		                android:layout_marginLeft="5dip"
		                android:text="@string/levelupscore"
		                android:textColor="#000000"
		                android:textSize="@dimen/TextDefaultSize" />
		
		            <TextView
		                android:id="@+id/textview_userlevelupscore"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentRight="true"
		                android:layout_centerVertical="true"
		                android:layout_marginRight="6dp"
		                android:text=""
		                android:textColor="#000000"
		                android:textSize="@dimen/TextDefaultSize" />
		        </RelativeLayout>
			</TableLayout>
			
		    <TableLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:layout_marginLeft="20dip"
		        android:layout_marginRight="20dip"
		        android:background="@drawable/shape_bg_corners"
		        android:orientation="vertical" >
		        
		        <RelativeLayout
		            android:layout_width="fill_parent"
		            android:layout_height="50dip"
		            android:layout_marginTop="1dip"
		            android:orientation="horizontal" 
		            android:background="@drawable/table_item_selector"
		            android:id="@+id/diary">"
		
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentLeft="true"
		                android:layout_centerVertical="true"
		                android:layout_marginLeft="5dip"
		                android:text="@string/diary"
		                android:textColor="#000000"
		                android:textSize="@dimen/TextDefaultSize" />
		        </RelativeLayout>
		        
		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="1dip"
		            android:background="#CCCCCC" />
		        
		        <RelativeLayout
		            android:layout_width="fill_parent"
		            android:layout_height="50dip"
		            android:layout_marginTop="1dip"
		            android:orientation="horizontal" 
		            android:background="@drawable/table_item_selector"
		            android:id="@+id/self_album">"
		
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentLeft="true"
		                android:layout_centerVertical="true"
		                android:layout_marginLeft="5dip"
		                android:text="@string/selfalbum"
		                android:textColor="#000000"
		                android:textSize="@dimen/TextDefaultSize" />
		        </RelativeLayout>
		
			</TableLayout>
	</LinearLayout>
</ScrollView>