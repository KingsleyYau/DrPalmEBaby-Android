<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/about_app_relativelayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/bglightblue" >
 
        <TableLayout
            android:id="@+id/tblayout_about"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:background="@drawable/shape_bg_corners"
            android:orientation="vertical" >
             <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dip"
                    android:textSize="@dimen/TextDefaultSize"
                    android:textColor="#000000"
                    android:text="@string/version" />
                                <TextView
                    android:id="@+id/version_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:textSize="@dimen/TextDefaultSize"
                    android:textColor="#000000" />
            </RelativeLayout>
            <LinearLayout 
                android:layout_height="1dip"
                android:layout_marginTop="5dip"
                android:layout_width="fill_parent"
                android:background="#CCCCCC"
                />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:layout_marginTop="5dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginBottom="5dip"
                    android:text="@string/about_detailed"
                    style="@style/EventsListItemBody"
                    android:textColor="#000000" /> 
        </TableLayout>
        <TextView
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:gravity="left"
		            android:background="@null"
		            android:layout_marginTop="5dip"
		            android:layout_marginLeft="20dip"
		            android:layout_marginRight="20dip"
		            android:layout_alignParentLeft="true"
                    android:layout_below="@+id/tblayout_about"
                    android:text="@string/copyright"
                    style="@style/EventsListItemBody"
                    android:textColor="#000000" />


</RelativeLayout>

